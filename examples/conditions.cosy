-- if statement
if condition {
    stuff();
}

-- else clause
if condition {
    stuff();
} else {
    otherwise();
}

-- match case
match condition {
    true  => stuff();
    false => otherwise();
}

-- while loop
for condition {
    stuff();
}

-- infinite loop
for {
    stuff();
}

-- for loop
let n = 100;
for let i = 0; i < n; i += 1 {
    stuff();
}
