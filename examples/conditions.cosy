-- if statement
if condition {
    stuff();
}

-- else clause
if condition {
    stuff();
} else {
    otherwise();
}

-- match case
match condition {
    true  => stuff(),
    false => otherwise()
}

-- while loop
for condition {
    stuff();
}

-- for loop
for let mut i = 0; i < 100; i = i + 1 {
    stuff();
}

-- infinite loop
for {
    stuff();
}
