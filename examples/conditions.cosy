-- if statement
if condition {
	stuff();
}

-- else clause
if condition {
	stuff();
} else {
	otherwise();
}

-- match case
case condition {
	true  = stuff(),
	false = otherwise()
}

-- while loop
while condition {
	stuff();
}

-- infinite loops
repeat {
	stuff();
}

-- repeat while
repeat {
	stuff();
} while condition;