-- if statement
if condition do {
	stuff();
}

-- else clause
if condition do {
	stuff();
} else {
	otherwise();
}

-- match case
case condition in {
	true  => stuff(),
	false => otherwise()
}

-- while loop
while condition do {
	stuff();
}

-- infinite loops
repeat {
	stuff();
}

-- repeat while
repeat {
	stuff();
} while condition;