// object definition
object Vec2 {
    x : Float = 0.0,
    y : Float = 0.0
}

//| Finds the dot product of two vectors.
//| Bleh.
def (a : Vec2) ∙ (b : Vec2) : Vec2 = a.x * b.x + a.y * b.y;

// object construction
var a = new Vec2 { x = 2.0, y = 4.2 };
var b = new Vec2 { x = 12.3 };

// setting an object member
