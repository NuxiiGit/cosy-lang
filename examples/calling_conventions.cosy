-- can be used to implement short-circuiting
let const (l : bool)  &&   (r : {} -> bool) : bool = if l do { r } else { false };
let const (l : bool)  ||   (r : {} -> bool) : bool = if l do { true } else { r };
let const (l : bool) `xor` (r : {} -> bool) : bool = if l do { !r } else { r };