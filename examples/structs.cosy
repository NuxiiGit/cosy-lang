-- tuples
let tuple = (1, 2)

-- records
let record = {
	name = "Bob"
	age = 17
}

-- typedefs
type Point = (i32, i32)
type Empty = ()

-- new type
struct Vec2 {
	x : i32,
	y : i32
}

-- construction
let vec = Vec2 { x = 2.0, y = 4.2 }
let point = Point(3.0, 2.0)

-- setting members
vec.x = 5.0     -- record
point.0 = 12.3  -- tuple

-- getting members
let y = vec.y    -- record
let b = point.1  -- tuple
