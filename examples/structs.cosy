-- tuples
let point = (3.0, 2.0);
case point in {
	(l, r) => l * r
}
point.0 = 12.3;
let a = point.1;

-- records
let record = { name = "bob", teeth_count = 103 };
case record in {
	{ n = teeth_count } => n + 10
}
record.name = "frank";
let b = record.teeth_count;

-- type alias
const POINT : type = (f32, f32);          -- MUST be `const`
const fn pair|a : type| : type = (a, a);  -- `const fn` is used for parameterised type aliases