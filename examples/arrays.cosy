-- arrays are a form of pointer, except they can be indexed
var arr : [i32] = [1, 2, 3];

var value : &i32 = arr !! 1;
arr !! 1 = 3;

-- arrays are allocated on the heap, except they are memory safe because copies clone the data, not the pointer
-- a.k.a. a box
var a = ['A', 'B', 'C'];
var b = a;
a !! 2 = 'D';

{- a == ['A', 'B', 'C']
 - b == ['A', 'B', 'D']
 -}

-- if you really need to copy the pointer, use a reference
var a = [1, 2, 3];
var c = &a;

c !! 1 = 0; 

{- a == [1, 0, 3]
 -}